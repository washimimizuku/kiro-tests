# ============================================================================
# Work Tracker Infrastructure Configuration
# Copy this file to terraform.tfvars and customize the values
# ============================================================================

# General Configuration
aws_region  = "us-east-1"
environment = "prod"

# Domain and SSL Configuration
domain_name         = "worktracker.yourdomain.com"
acm_certificate_arn = "arn:aws:acm:us-east-1:ACCOUNT-ID:certificate/CERTIFICATE-ID"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

# RDS Configuration
rds_instance_class          = "db.t3.small"
rds_allocated_storage       = 50
rds_multi_az               = true
rds_backup_retention_period = 7

# Database Configuration
database_name     = "work_tracker"
database_username = "work_tracker_user"

# ElastiCache Configuration
redis_node_type   = "cache.t3.micro"
redis_num_nodes   = 2

# ECS Configuration
backend_image         = "123456789012.dkr.ecr.us-east-1.amazonaws.com/work-tracker-backend:latest"
backend_cpu           = 512
backend_memory        = 1024
backend_desired_count = 2

# Cognito Configuration
cognito_callback_urls = [
  "https://worktracker.yourdomain.com/auth/callback",
  "http://localhost:3000/auth/callback"
]
cognito_logout_urls = [
  "https://worktracker.yourdomain.com/auth/logout",
  "http://localhost:3000/auth/logout"
]

# Monitoring Configuration
alarm_email = "admin@yourdomain.com"